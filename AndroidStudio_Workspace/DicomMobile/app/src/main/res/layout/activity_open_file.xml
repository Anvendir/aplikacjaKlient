<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="pl.kobak.rafal.dicommobile.OpenFile">

    <Button
        android:layout_width="@dimen/buttonLanguage_width"
        android:layout_height="@dimen/buttonLanguage_height"
        android:text="@string/button_openRemotely"
        android:id="@+id/button_openRemotely"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick_openFileRemotely"
        android:background="@drawable/button"
        style="@style/buttonStyle"/>

    <Button
        android:layout_width="@dimen/buttonLanguage_width"
        android:layout_height="@dimen/buttonLanguage_height"
        android:text="@string/button_openLocally"
        android:id="@+id/button_openLocally"
        android:layout_above="@+id/button_openRemotely"
        android:layout_centerHorizontal="true"
        android:onClick="onClick_openFileLocally"
        android:background="@drawable/button"
        style="@style/buttonStyle"/>

</RelativeLayout>
