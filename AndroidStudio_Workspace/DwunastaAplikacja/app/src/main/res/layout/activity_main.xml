<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <pl.kobak.rafal.dwunastaaplikacja.Figura
            style="@style/moj_styl"
            android:id="@+id/view"
            android:contentDescription="@string/kolo"
            android:onClick="kliknieTo" />

        <pl.kobak.rafal.dwunastaaplikacja.Figura
            style="@style/moj_styl"
            android:id="@+id/view2"
            android:contentDescription="@string/elipsa"
            android:onClick="kliknieTo" />

        <pl.kobak.rafal.dwunastaaplikacja.Figura
            style="@style/moj_styl"
            android:id="@+id/view3"
            android:contentDescription="@string/prostokat"
            android:onClick="kliknieTo" />

        <pl.kobak.rafal.dwunastaaplikacja.Figura
            style="@style/moj_styl"
            android:id="@+id/view4"
            android:contentDescription="@string/prostokat_okragly"
            android:onClick="kliknieTo" />

        <pl.kobak.rafal.dwunastaaplikacja.Figura
            style="@style/moj_styl"
            android:id="@+id/view5"
            android:contentDescription="@string/luk"
            android:onClick="kliknieTo" />

        <pl.kobak.rafal.dwunastaaplikacja.Figura
            style="@style/moj_styl"
            android:id="@+id/view6"
            android:contentDescription="@string/linia"
            android:onClick="kliknieTo" />
    </LinearLayout>
</ScrollView>
